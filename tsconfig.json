{
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "preserve",
    "jsxImportSource": "jsx-dom",
    "sourceMap": true,
    "lib": ["ESNext", "DOM"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "dev", "*.config.ts"],
  "exclude": ["lib", "dist"]
}
